@model UserLoginView
@{ ViewData["Title"] = "Login"; }

<div class="container mt-5">
    <div class="d-flex justify-content-center">
        <form method="post" class="col-10 col-xl-6" novalidate>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <small class="text-danger"><span asp-validation-for="Email"></span></small>
            </div>
            
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <small class="text-danger"><span asp-validation-for="Password"></span></small>
            </div>

            <div class="mb-3 d-flex flex-row">
                @Html.LabelFor(u => u.RememberMe)
                @Html.CheckBoxFor(u => u.RememberMe)
            </div>

            <div class="mt-3">
                <div class="d-grid">
                    <button class="btn btn-success">Login...</button>
                </div>
            </div>

            <a asp-controller="user" asp-action="register">Register...</a>

        </form>
    </div>
</div>