@model RegisterView
@{ ViewData["Title"] = "Register"; }

<div class="d-flex justify-content-center my-5">
    <div class="col-6">
        
        <form method="post" novalidate>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="EmailAddress" class="form-label"></label>
                <input asp-for="EmailAddress" class="form-control"/>
                <small><span asp-validation-for="EmailAddress" class="text-danger"></span></small>
            </div>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <small><span asp-validation-for="FirstName" class="text-danger"></span></small>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <small><span asp-validation-for="LastName" class="text-danger"></span></small>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <small class="w-pre"><span asp-validation-for="Password" class="text-danger"></span></small>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <small><span asp-validation-for="ConfirmPassword" class="text-danger"></span></small>
            </div>

            <div class="mb-3">
                <label asp-for="StreetName" class="form-label"></label>
                <input asp-for="StreetName" class="form-control" />
                <small><span asp-validation-for="StreetName" class="text-danger"></span></small>
            </div>

            <div class="mb-3">
                <label asp-for="PostalCode" class="form-label"></label>
                <input asp-for="PostalCode" class="form-control" />
                <small><span asp-validation-for="PostalCode" class="text-danger"></span></small>
            </div>

            <div class="mb-3">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
                <small><span asp-validation-for="City" class="text-danger"></span></small>
            </div>

            <div class="grid">
                <button type="submit" class="button-success mt-2">Register</button>
            </div>

        </form>

    </div>
</div>