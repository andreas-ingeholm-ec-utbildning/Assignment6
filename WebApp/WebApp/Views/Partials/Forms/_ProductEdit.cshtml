@inject CategoryService categoryService;
@model ProductAddView;

@{
    var categories = await categoryService.EnumerateAsync(); 
}

<form method="post" novalidate>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Form.Name" class="form-label"></label>
        <input asp-for="Form.Name" class="form-control" />
        <small><span asp-validation-for="Form.Name" class="text-danger"></span></small>
    </div>

    <div class="mb-3">
        <label asp-for="Form.Price" class="form-label"></label>
        <input asp-for="Form.Price" class="form-control" />
        <small><span asp-validation-for="Form.Price" class="text-danger"></span></small>
    </div>

    <div class="mb-3">
        <label asp-for="Form.Description" class="form-label"></label>
        <textarea asp-for="Form.Description" class="form-control" rows="4"></textarea>
        <small><span asp-validation-for="Form.Description" class="text-danger"></span></small>
    </div>

    <div class="mb-3">
        <label asp-for="Form.Category" class="form-label"></label>
        <br/>
        <select asp-for="Form.Category">
            @foreach (var category in categories)
            {
                <option value="@category.ID">@category.Name</option>
            }
        </select>
    </div>

    <div class="d-grid mt-2">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>