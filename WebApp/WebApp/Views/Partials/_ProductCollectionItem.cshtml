@model Product;

@if (!Model.IsVisible)
    return;

<a asp-controller="products" asp-action="product" asp-route-id="@Model.ID" class="collection-item">
    <img src="@Model.ImageUrl" alt="@Model.Name">
    <div class="body">
        <div class="title">@Model.Name</div>
        <div class="info">
            <div class="price">$@Model.Price</div>
            <i class="add-cart fa-regular fa-cart-plus"></i>
        </div>
    </div>
</a>