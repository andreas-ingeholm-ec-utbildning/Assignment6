@model UserFormAdminView;

<div class="col-6">
    
    <h4 class="my-4">Edit user:</h4>
    <div class="text-info my-2">@Model.Email</div>
    <div class="text-info my-2">ID: @Model.ID</div>

    <partial name="/Views/Partials/Forms/_UserAdmin.cshtml" model="@Model" />

    @if(User.Identity?.Name != Model.Email)
    {
        <a asp-controller="admin" asp-action="deleteuser" asp-route-id="@Model.ID">Delete user...</a>
    }

</div>